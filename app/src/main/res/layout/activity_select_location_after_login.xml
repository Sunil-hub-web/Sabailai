<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".customer.activities.SelectLocationAfterLogin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/home_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sixty"
            android:src="@drawable/login_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginTop="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sans_regular"
                android:gravity="center"
                android:text="Experienced hand-picked professionals to serve you at your doorsteps"
                android:textColor="@color/colorGrey1"
                android:textSize="@dimen/ten" />


        </RelativeLayout>


        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:layout_marginBottom="@dimen/six"
            android:text="Select State"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:background="@drawable/box"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/edstate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:fontFamily="@font/roboto_thin"
                android:gravity="center_vertical"
                android:hint="Enter Your Location"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textSize="@dimen/fifteen" />

        </LinearLayout>



        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/fifteen"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:layout_marginBottom="@dimen/six"
            android:text="Select City"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginRight="@dimen/thirty"
            android:background="@drawable/box"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/edcity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:fontFamily="@font/roboto_thin"
                android:gravity="center_vertical"
                android:hint="Enter Your Location"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:paddingLeft="@dimen/ten"
                android:paddingRight="@dimen/ten"
                android:singleLine="true"
                android:textSize="@dimen/fifteen" />

        </LinearLayout>

        <Button
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty"
            android:layout_marginLeft="@dimen/thirty"
            android:layout_marginTop="@dimen/twenty"
            android:layout_marginRight="@dimen/thirty"
            android:background="@drawable/login_btn_bg"
            android:fontFamily="@font/sans_bold"
            android:text="PROCEED"
            android:textColor="@color/white" />


    </LinearLayout>

</RelativeLayout>