<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/hundred_eighty"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/ten"
    android:paddingRight="@dimen/ten"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred"
        app:cardCornerRadius="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred"
                android:scaleType="centerCrop"
                android:src="@drawable/offer_a"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cat_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="15% off on all\nPlumbing Services*"
        android:layout_marginTop="@dimen/five"
        android:layout_marginBottom="@dimen/five"
        android:fontFamily="@font/sans_regular"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/three"
        android:paddingRight="@dimen/three"/>


</LinearLayout>
